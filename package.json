{
  "name": "@kv2461/auto-retro",
  "version": "0.1.3",
  "description": "Automate retrospective creation on retrotool.io with custom templates and titles",
  "main": "dist/index.js",
  "bin": {
    "retro": "dist/index.js"
  },
  "type": "module",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "create-retro": "tsx src/index.ts",
    "interactive": "tsx src/interactive.ts",
    "workflow": "node scripts/run-workflow.js",
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "test": "jest --testPathIgnorePatterns='.*\\.integration\\.spec\\.ts$'",
    "test:integration": "jest --testPathPattern='.*\\.integration\\.spec\\.ts$'",
    "test:retro": "jest --testPathPattern='.*\\.integration\\.spec\\.ts$'",
    "test:all": "jest",
    "test:watch": "jest --watch --testPathIgnorePatterns='.*\\.integration\\.spec\\.ts$'",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "playwright:install": "playwright install"
  },
  "author": "Kevin Vicencio <kevinarnoldcode@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kv2461/auto-surf-prototype.git"
  },
  "homepage": "https://github.com/kv2461/auto-surf-prototype#readme",
  "bugs": {
    "url": "https://github.com/kv2461/auto-surf-prototype/issues"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "commander": "^11.0.0",
    "date-fns": "^2.30.0",
    "playwright": "^1.40.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/*.spec.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.spec.ts",
      "!src/**/*.d.ts"
    ]
  }
}
